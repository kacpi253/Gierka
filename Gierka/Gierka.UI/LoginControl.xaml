<UserControl x:Class="Gierka.UI.LoginControl"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:Gierka.UI"
       mc:Ignorable="d">
    <UserControl.Resources>
       <Style x:Key="SimpleLoginButton" TargetType="{x:Type Button}">
           <Setter Property="Background" Value="#FF922C39"/>
           <Setter Property="Foreground" Value="White"/>
           <Setter Property="FontSize" Value="18"/>
           <Setter Property="FontWeight" Value="Bold"/>
           <Setter Property="Margin" Value="0,15,0,0"/>
           <Setter Property="Padding" Value="10,5"/>
           <Setter Property="BorderThickness" Value="0"/>
           <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC8505C"/>
               </Trigger>
               <Trigger Property="IsPressed" Value="True">
                   <Setter Property="Background" Value="#FF6D1E25"/>
               </Trigger>
           </Style.Triggers>
       </Style>

       <Style TargetType="{x:Type TextBox}">
           <Setter Property="Padding" Value="5"/>
           <Setter Property="Margin" Value="0,5,0,15"/>
       </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>
        
    </UserControl.Resources>

   <Grid>
       <Grid.Background>
           <ImageBrush ImageSource="/Images/tlo.png" Opacity="0.7"/>
       </Grid.Background>

       <Border Background="#D9000000" CornerRadius="20" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Width="300" Padding="30">

           <Grid>
               <Grid.RowDefinitions>
                   <RowDefinition Height="Auto"/>
                   <RowDefinition Height="Auto"/>
                   <RowDefinition Height="Auto"/>
                   <RowDefinition Height="Auto"/>
                   <RowDefinition Height="Auto"/>
                   <RowDefinition Height="Auto"/>
               </Grid.RowDefinitions>

               <Label Content="Login:" Foreground="White" Grid.Row="0"/>
               <TextBox x:Name="LoginTextBox" Grid.Row="1"/>

               <Label Content="Hasło:" Foreground="White" Grid.Row="2"/>
               <PasswordBox x:Name="PasswordTextBox" Grid.Row="3"/>

               <Button x:Name="LoginButton" Content="Zaloguj" Grid.Row="4" 
                       Style="{StaticResource SimpleLoginButton}" 
                       Click="LoginButton_Click"/>

               <Button x:Name="RegisterButton" Content="Zarejestruj" Grid.Row="5" 
                       Style="{StaticResource SimpleLoginButton}" 
                       Click="RegisterButton_Click"/>

           </Grid>
       </Border>
   </Grid>
</UserControl>