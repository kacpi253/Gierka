<UserControl x:Class="Gierka.UI.Gra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gierka.UI"
        mc:Ignorable="d"
       >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />

            <RowDefinition Height="90*"/>


        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="Chocolate"/>
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Gierka.UI;component/Images/PZPR.png" Stretch="Fill"/>
            </Border.Background>
        </Border>

        <Viewbox Stretch="Uniform">

            <StackPanel Orientation="Horizontal" Margin="10">

                <TextBlock Text="Punkty Polityczne:" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="Wyswietleniepolitycznych" Text="150" FontSize="24" Margin="5,0,30,0"/>

                <TextBlock Text="Punkty Militarne:" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="Wyswietleniemilitarnych" Text="420" FontSize="24" Margin="5,0,30,0"/>

                <TextBlock Text="Złotówki:" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="Wyswietleniezlotowek" Text="980" FontSize="24" Margin="5,0,30,0"/>

                <TextBlock Text="Funty Izraelskie:" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="WyswietlenieFuntow" Text="55" FontSize="24" Margin="5,0,10,0"/>

            </StackPanel>
        </Viewbox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Dodaj 10 PP" Height="50" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="PP" Click="DodajPP"/>
            <Button Content="Dodaj 10 PM" Height="50" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="PM" Click="DodajPM"/>

            <Button Content="Dodaj 10 złotych" Height="50" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="Pieniadze" Click="DodajPieniadze"/>
            <Button Content="Dodaj 10 funtów" Height="50" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="FuntyIzraelskie" Click="DodajFuntyIzraelskie"/>

            <Button Content="Przejdz do gdanska" Height="50" Width="110" Grid.Row="0" Grid.Column="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="Gdanskk" Click="Gdansk"/>

            <Button Content="Przejdz do sejmu" Height="50" Width="110" Grid.Row="2" Grid.Column="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="Sejmm" Click="Sejm"/>

            <Button Content="Przejdz do MON" Height="50" Width="110" Grid.Row="4" Grid.Column="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="Monn" Click="Mon"/>

            <Button Content="JednorękiGierek" Height="50" Width="100" Grid.Row="5" Grid.Column="2" Margin="0,45,0,20"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="Kasynko" Click="JednorekiGierek"/>

        </Grid>

    </Grid>
</UserControl>
